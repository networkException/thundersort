{
    "$schema": "https://json.schemastore.org/webextension.json",
    "name": "thundersort",
    "description": "Sort incoming mails into account folders based on the local part",
    "version": "1.1.0",
    "applications": {
        "gecko": {
            "id": "mozilla@nwex.de",
            "strict_min_version": "91.0"
        }
    },
    "permissions": [
        "messagesRead",
        "messagesMove",
        "accountsRead",
        "accountsFolders",
        "menus",
        "storage"
    ],
    "background": {
        "page": "dist/background.html"
    },
    "options_ui": {
        "page": "dist/options.html",
        "open_in_tab": true,
        "browser_style": true
    },
    "manifest_version": 2
}
